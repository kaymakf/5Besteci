<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.furkan.studyjam.besbesteci.MainActivity"
    android:orientation="vertical"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/bach_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="open" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_centerInParent="true"
            android:src="@drawable/bach"
            android:alpha="0.9"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Johann Sebastian Bach"
            android:id="@+id/textView3"
            android:textSize="32sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/beethoven_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/beethoven"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:alpha="0.9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ludwig van Beethoven"
            android:id="@+id/textView"
            android:textSize="32sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/mozart_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/mozart"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:alpha="0.9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wolfgang Amadeus Mozart"
            android:id="@+id/textView2"
            android:textSize="28sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/wagner_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:src="@drawable/wagner"
            android:alpha="0.9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Richard Wagner"
            android:id="@+id/textView4"
            android:textSize="32sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/vivaldi_layout" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:src="@drawable/vivaldi"
            android:alpha="0.7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antonio Vivaldi"
            android:id="@+id/textView5"
            android:textSize="32sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
